<h1>Customer Information Center</h1>
<hr>

<div class="all-cust">
    <h1>All Customers</h1>
    <table class ="cust-table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
    <tbody>
        <%customers.forEach(customer => {%>
            <tr>
                <td><%=customer.firstname%></td>
                <td><%=customer.lastname%></td>
                <td><%=customer.email%></td>
                <td><a href ="/CDM/Customer/Update/edit/<%= customer._id%>">Update</a></td>
                <td><a href ="/CDM/Customer/Update/delete/<%= customer._id%>">Delete</a></td>
            </tr>
        <% });%>
    </tbody>
    </table>
   
</div>
<div style="text-align: center;">
<button><a style="text-decoration: none; font-size: 16px; color: black;" href="/CDM">Go Back</a></button>
</div>